@model IEnumerable<scproject.Product>

@{
    ViewBag.Title = "IndexProduct";
    Layout = "~/Views/Shared/_LayoutforAdmin.cshtml";
}

<h2>Products</h2>

<p>
    @using (Html.BeginForm("IndexProduct","Admin",FormMethod.Get))
    {
        <b>Search by:  </b>@Html.RadioButton("searchBy", "ProductName",true)<text>Product Name</text>
        @Html.RadioButton("searchBy", "Category")<text>Category</text><br /><br />
        @Html.TextBox("search")<input type="submit" value="Search" style="background-color:darkred;color:white"/>
    }
</p>

<p>
    @Html.ActionLink("Create New", "CreateProduct")
</p>

<table class="table" style="border-color:darkred;border:solid;">
    <tr style="background-color:darkred;color:white">
        <th>
            <h5><b>Product ID</b></h5>
        </th>
        <th>
            <h5><b>Product Name</b></h5>
        </th>
        <th>
            <h5><b>Cost Per Kg</b></h5>
        </th>
        <th>
            <h5><b>Product Category</b></h5>
        </th>
        <th>
            <h5><b>Supplier ID</b></h5>
        </th>
        <th></th>
    </tr>

@foreach (var item in Model)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.ProductID)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.CostPerKg)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Category)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.SupplierID)
        </td>
        <td>
            @Html.ActionLink("Edit", "EditProduct", new { id = item.ProductID }) |
            @Html.ActionLink("Details", "DetailsProduct", new { id = item.ProductID }) |
            @Html.ActionLink("Delete", "DeleteProduct", new { id = item.ProductID })
        </td>
    </tr>
}

</table>
