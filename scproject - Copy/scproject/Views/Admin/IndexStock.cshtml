@model IEnumerable<scproject.Stock>

@{
    ViewBag.Title = "IndexStock";
    Layout = "~/Views/Shared/_LayoutforAdmin.cshtml";
}

<h2>Stocks</h2>

<p>
    @Html.ActionLink("Create New", "CreateStock")
</p>
<table class="table" style="border-color:darkred;border:solid;">
    <tr style="background-color:darkred;color:white">
        <th>
            <h5><b>Stock ID</b></h5>
        </th>
        <th>
            <h5><b>Product Availability</b></h5>
        </th>
        <th>
            <h5><b>Product ID</b></h5>
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.StockID)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Availabilityy)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProductID)
            </td>
            <td>
                @Html.ActionLink("Edit", "EditStock", new { id = item.StockID }) |
                @Html.ActionLink("Details", "DetailsStock", new { id = item.StockID }) |
                @Html.ActionLink("Delete", "DeleteStock", new { id = item.StockID })
            </td>
        </tr>
    }

</table>
